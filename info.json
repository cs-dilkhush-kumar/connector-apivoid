      "operation": "get_dns_propagation",
      "title": "Get DNS Propagation",
      "description": "Check if DNS records of a domain have propagated globally.",
      "enabled": true,
      "parameters": [
        {
          "title": "Domain Name",
          "required": true,
          "visible": true,
          "editable": true,
          "type": "text",
          "name": "req_value",
          "value": "domain.com"
        },
        {
          "title": "Request Type",
          "required": true,
          "editable": false,
          "visible": true,
          "type": "text",
          "name": "req_type",
          "value": "dnspropagation"
        },
        {
          "title": "Record Type",
          "required": true,
          "visible": true,
          "editable": true,
          "type": "select",
          "options": [
                        "A",
                        "AAAA",
                        "NS",
                        "MX",
                        "TXT",
                        "SRV",
                        "SOA",
                        "CNAME",
                        "SPF",
                        "CAA"
                    ],
          "description": "DNS records type: A, AAAA, NS, MX, TXT, SRV, PTR, SOA, CNAME, SPF, CAA",
          "name": "dns_record_type",
          "value": "MX"
        }        
      ],
      "annotation": "get_dns_propagation",
      "category": "investigation",
      "output_schema": {
        "result": "",
        "status": ""
      }
