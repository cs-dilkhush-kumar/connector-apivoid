{
  "name": "apivoid",
  "label": "apivoid",
  "description": "Apivoid connector provides several threat intelligence services ranging from IP/URL/Domain reputation to domain age and website screenshots",
  "publisher": "Community",
  "cs_approved": false,
  "cs_compatible": true,
  "version": "1.0.0",
  "category": "ThreatIntelligence",
  "icon_small_name": "small_icon.png",
  "icon_large_name": "large_icon.png",
  "help_online": "https://docs.fortinet.com/document/apivoid/1.0.1/apivoid/49/apivoid-v1-0-0",
  "help_file": "apivoid.pdf",
  "configuration": {
    "fields": [
      {
        "title": "Server URL",
        "name": "server",
        "required": true,
        "editable": true,
        "visible": true,
        "type": "text",
        "value": "endpoint.apivoid.com",
        "description": "IP address or FQDN of the Apivoid cloud Platform."

      },
      {
        "title": "API Key",
        "name": "api_key",
        "required": true,
        "editable": true,
        "visible": true,
        "type": "password",
        "description": "API Key from Apivoid.com"
      },
      {
        "title": "Verify SSL",
        "name": "verify_ssl",
        "required": false,
        "editable": true,
        "visible": true,
        "type": "checkbox"
      }
    ]
  },
  "operations": [
    {
      "operation": "get_threatlog_domain_reputation",
      "title": "Get ThreatLog Domain Reputation",
      "description": "Query ThreatLog.com database of malicious domains",
      "enabled": true,
      "parameters": [
        {
          "title": "Domain Name",
          "required": true,
          "visible": true,
          "editable": true,
          "type": "text",
          "name": "req_value",
          "value": "domain.com"
        },
        {
          "title": "Request Type",
          "required": true,
          "editable": false,
          "visible": true,
          "type": "text",
          "name": "req_type",
          "value": "threatlog"
        }        
      ],
      "annotation": "get_threatlog_domain_reputation",
      "category": "investigation",
      "output_schema": {
        "result": "",
        "status": ""
      }
    },
    {
      "operation": "get_domain_reputation",
      "title": "Get Domain Reputation",
